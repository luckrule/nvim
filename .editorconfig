root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 80

[*.{js,ts}]
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = both
indent_brace_style = K&R
continuation_indent_size = 2
